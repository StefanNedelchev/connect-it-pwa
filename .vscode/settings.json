{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "eslint.options": {
    "extensions": [
      ".ts",
      ".html"
    ]
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html"
  ],
  "stylelint.customSyntax": "postcss-scss",
  "stylelint.validate": [
    "css",
    "postcss",
    "scss"
  ],
  "typescript.preferences.importModuleSpecifier": "relative"
}
